<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/ll_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_light"
        android:orientation="horizontal"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="5dp"
                android:text="朴槿惠“亲信干政”事件：崔顺实主动接受传讯 口罩遮面沉默不语【组图】"
                android:textColor="@color/textNormalColor"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/multi_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news_title"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_news_pic0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:src="@drawable/card_light"/>

                <ImageView
                    android:id="@+id/iv_news_pic1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:src="@drawable/card_light"/>

                <ImageView
                    android:id="@+id/iv_news_pic2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:src="@drawable/card_light"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_news_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/multi_image_layout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="人民网"/>

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_news_author_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_news_author_name"
                android:maxLines="1"
                android:text="2017-02-09 10:45"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>